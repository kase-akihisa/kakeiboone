<div class="container">
<div class="mt-50">
  <h2>計算</h2>
   <%= form_with url: spendings_path, local: true do |f| %>
    <div class="form-group">
     <%= f.label :"住居費" %>
     <%= f.text_field :"cost_house", class: 'form-control', name: 'spending[cost_house]' %>
    </div>
    <div class="form-group">
     <%= f.label :"水道光熱費" %>
     <%= f.text_field :"cost_utility", class: 'form-control' , name: 'spending[cost_utility]'%>
    </div>
    <div class="form-group">
     <%= f.label :"通信費" %>
     <%= f.text_field :"cost_communications", class: 'form-control', name: 'spending[cost_communications]' %>
    </div>
    <div class="form-group">
     <%= f.label :"交通費" %>
     <%= f.text_field :"cost_travel", class: 'form-control', name: 'spending[cost_travel]' %>
    </div>
    <div class="form-group">
     <%= f.label :"日用品費" %>
     <%= f.text_field :"cost_item", class: 'form-control', name: 'spending[cost_item]' %>
    </div>
    <div class="form-group">
     <%= f.label :"その他" %>
     <%= f.text_field :"cost_other", class: 'form-control', name: 'spending[cost_other]' %>
    </div>
   <div class="form-group">
    <%= f.label "登録日", class: 'control-label'%>
    <%= f.date_select :date, class: 'form-control'%>
   </div>
   <% if logged_in? %>
   <%= f.submit '計算', class: 'btn btn-black btn-block' %>
   <% end %>
  <% end %>
 </div>
  <p>＊なるべく一日一回だけ押してください。</p>
</div>
</div>